<style type="text/css">
      header {
        font-family: 'Chicle', cursive;
        font-size: 65px;
        color: black;
        background: url('../assets/images/header.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;

      }

      body {
        background: #FFF;
        display: flex;
        flex-direction: column;
        height: 100%;
        min-height: 100vh;
      }

      main {
        width: 100%;
        height: 100%;
        flex: 1 0 auto;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
      }

      .task-container {
        height: 100%;
        flex-grow: 1;
        flex-basis: 30%;
        justify-content: flex-end;
      }

      nav {
        background-color: #506d7c !important;
        border-bottom: 5px solid #fff;
        border-top: 5px solid #fff;

      }

      .row {
        margin-bottom: 5px;
      }

      .ngl {
        position: absolute;
        top: -20px;
        right: -20px;
      }

      footer {
        background-color: #506d7c !important;
        border-bottom: 5px solid #fff;
        border-top: 5px solid #fff;
        color: #fff;
        width: 100%;
        height: 30px;
      }
    </style>
  </head>
  <!--Main Navigation-->
  <header>
    <!-- Intro Section -->
    <div class="view hm-black-light jarallax" data-jarallax='{"speed": 0.2}'>
      <div class="full-bg-img">
        <div class="container flex-center">
          <div class="row pt-5 mt-3">
            <div class="col-md-12">
              <div class="text-center">
                <h1 class="h1-reponsive text-dark text-uppercase font-weight-bold mb-3 wow fadeInDown" data-wow-delay="0.3s"><strong>Task Manager</strong></h1>
                <hr class="hr-light mt-4 wow fadeInDown" data-wow-delay="0.4s">
                <h5 class="text-uppercase mb-5 text-dark wow fadeInDown" data-wow-delay="0.4s"><strong>Time is Money</strong></h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!--Navbar-->
  <nav>
    <div class="nav-wrapper">
      <ul class="left hide-on-med-and-down">
        <li><a href="task.">TASK</a></li>
        <li><a href="notes">NOTES</a></li>
      </ul>
    </div>
  </nav>
  <!--Main Layout-->
  <main>
    <div class="container task-container col-md-6">
      <!--Inputting new task-->
      <form id="task-form">
        <div class="row">
          <div class="input-field col s10">
            <input id="taskname" type="text" name="taskname" class="validate" required/>
            <label for="taskname">Task</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <!-- <i class="material-icons prefix">account_circle</i> -->
            <input id="taskdate" type="text" class="datepicker">
            <label>Date</label>
          </div>
          <div class="input-field col s6">
            <!-- <i class="material-icons prefix">account_circle</i> -->
            <input id="tasktime" type="text" class="timepicker">
            <label>Time</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s10">
            <textarea id="messagebox" class="materialize-textarea"></textarea>
            <label for="messagebox">Message</label>
          </div>
        </div>
        <button class="btn waves-effect waves-light" id="addtask-btn">SET TASK</button>
      </form>
    </div>
    <!--Table w/ tasks-->
    <br>
    <div class="container task-container col-md-6">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Task</th>
            <th scope="col">Due Date/Time</th>
            <th scope="col">Done</th>
          </tr>
        </thead>
        <tbody id="tableData">
        </tbody>
      </table>
    </div>
  </main>
  <footer class="footer">
    <div class="footer-copyright ">
      <span class="grey-text text-lighten-4">Â© 2018 Copyrights from Clark-Matthew-Sarah-Shraddha</span>
